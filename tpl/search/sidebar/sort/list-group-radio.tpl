<div class="list-group list-group-radio d-grid gap-2 border-0 w-auto my-2 %HIDE_SORT_ITEM%">
  <div class="position-relative">
    <input class="form-check-input position-absolute top-50 end-0 me-3 fs-5" type="radio" name="sortBy" id="sort%SORT_ID%" value="%SORT_VALUE%" %SORT_CHECKED% />
    <label class="list-group-item pe-5" for="sort%SORT_ID%">
      <strong class="fw-semibold">%SORT_TEXT%</strong>
      <span class="d-block small opacity-75">%SORT_NOTE%</span>
    </label>
  </div>
</div>
